<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShopNowActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Choose one of the following categories to start shopping now"
            android:id="@+id/textView6"
            android:layout_gravity="left|top"
            android:textSize="14dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat1"
            android:layout_gravity="left|top"
            android:layout_marginTop="50dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat2"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="50dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat3"
            android:layout_gravity="right|top"
            android:layout_marginTop="50dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat4"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat5"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat6"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="30dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat7"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="30dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat8"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/imgCat9"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="30dp" />

    </FrameLayout>
</RelativeLayout>
